<% if flash[:error]%>
<% flash[:error].each do |e|%>
<p><%=e%></p>
<%end%>
<%end%>

<%= form_for @dragon do |d|%>
<%=d.label "Name" %>
<%=d.text_field :name %><br>
<%=d.label "Age" %>
<%=d.text_field :age %><br>
<%=d.label "Choose a Master"%>
<%=d.collection_select :user_id, @users, :id, :name%>
<%=d.submit %>
<%end%>
